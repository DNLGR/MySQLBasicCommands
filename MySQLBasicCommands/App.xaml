<Application x:Class="MySQLBasicCommands.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MySQLBasicCommands">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- In this file you can change the colors of the project. -->
                <ResourceDictionary Source="Assets\Styles\Colors.xaml" />

                <!-- In this file you can change the icons in the navigation bar. -->
                <ResourceDictionary Source="Assets\Icons\Icons.xaml" />

                <!-- In this file you can change the text font. -->
                <ResourceDictionary Source="Assets\Styles\Fonts.xaml" />

                <!-- These files contain the styles to the controls. -->
                <ResourceDictionary Source="Assets\Styles\Window.xaml" />
                <ResourceDictionary Source="Assets\Styles\Buttons.xaml" />
                <ResourceDictionary Source="Assets\Styles\Frame.xaml" />
                <ResourceDictionary Source="Assets\Styles\FlowDocument.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
